                                    <option value="Personal Leave">Personal Leave</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 justify-content-md-ceneter">
                        <div class="mb-3">
                            <label for="date" class="form-label fw-bold">Leave Date</label>
                            <input type="date" class="form-control" id="date" aria-describedby="leave_date">
                        </div>
                    </div>
